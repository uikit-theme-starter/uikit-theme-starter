// Slider Center Scale

section.uk-section.uk-section-large.slider-center-scale.uk-background-muted

    .uk-text-center.uk-margin-medium-bottom
        h2.uk-margin-remove Slider Center Scale
        p.uk-margin-small: span.uk-icon(uk-icon="icon: icn-karo")

    .uk-container.uk-container-small.uk-position-relative
        .swiper-center-scale.swiper-container
            .swiper-wrapper(uk-lightbox)
                - x = 0
                while x < 10
                    - x++
                    .swiper-slide
                        .uk-position-relative(data-swiper-parallax="0" data-swiper-parallax-opacity="0.5" data-swiper-parallax-scale="0.9")
                            img.uk-width-1-1(src="https://dummyimage.com/270x390/b3b3b3/474747")

            .uk-position-cover.uk-flex.uk-flex-center.uk-flex-middle
                .uk-position-relative.uk-width-1-1(class="uk-width-1-3@s")
                    .uk-position-center-left-out.uk-position-z-index(uk-slidenav-previous)
                    .uk-position-center-right-out.uk-position-z-index(uk-slidenav-next)