header.header-default(uk-sticky show-on-up animation="uk-animation-slide-top" cls-active="uk-navbar-sticky" sel-target=".uk-navbar-container")

    .uk-container

        nav(class="uk-navbar-container uk-navbar-transparent uk-navbar uk-flex-between" uk-navbar="dropbar: true") 

            .uk-navbar-left

                a(class="uk-navbar-item uk-logo uk-padding-remove-left uk-visible@m" href="/")

                    img(src="/images/icons/icn-tuna-ofis-logo-dark.svg" alt="")

            .uk-flex.uk-flex-1.nav-overlay

                a(class="uk-navbar-item uk-logo uk-padding-remove-left uk-hidden@m" href="/")

                    img(src="/images/icons/icn-tuna-ofis-logo-dark.svg" alt="tuna ofis")

                ul(class="uk-navbar-nav uk-margin-auto uk-visible@m")

                    li: a(href="#") Nav 1

                    li: a(href="#") Nav 2

                    li: a(href="#") Nav 3

                    li: a(href="#") Nav 4

            .nav-overlay.uk-navbar-right

                div(class="uk-navbar-item uk-padding-remove-right")

                    a(href="#" class="uk-navbar-toggle uk-padding-remove" uk-toggle="target: .nav-overlay; animation: uk-animation-fade")

                        span(uk-icon="icn-search" class="icn-search") 

