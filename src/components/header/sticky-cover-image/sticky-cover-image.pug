// Header Sticky Cover Image

section.uk-position-relative.uk-overflow-hidden.cover-image

    header.uk-position-top.uk-position-z-index.header-sticky.header-sticky-cover

        div(uk-sticky="animation: uk-animation-slide-top; cls-active: uk-navbar-sticky; top: .cover-image")

            nav(class="uk-navbar-container uk-navbar-transparent uk-container uk-navbar" uk-navbar) 

                .uk-navbar-left.uk-margin-auto-right
                    a(class="uk-navbar-item uk-logo uk-padding-remove-left" href="/")
                        img(src="/images/icons/icn-tuna-ofis-logo-dark.svg" alt="")

                ul(class="uk-navbar-nav uk-visible@m")
                    li.uk-active
                        a(href="hakkimizda.html") Nav 1
                    li
                        a(href="hizmetlerimiz.html") Nav 2
                    li
                        a(href="islerimiz.html") Nav 3
                    li
                        a(href="markalarimiz.html") Nav 4

                div(class="uk-navbar-item uk-padding-remove-right uk-visible@m")
                    a(href="#" class="uk-button uk-button-primary uk-button-small")
                        span(uk-icon="icon: mail;" class="uk-margin-small-right")
                        | Item 1

                div(class="uk-navbar-item uk-hidden@m uk-light uk-padding-remove")
                    a(href="#header-mobile-modal" class="uk-navbar-toggle uk-padding-remove" uk-toggle)
                        span(uk-icon="icon: icn-menu-dark;")

    .uk-height-large.uk-background-cover(style="background-image: url(/images/section/section.jpg);")

    .uk-position-center.uk-dark.uk-text-center.cover-text

        h1 Title

        p Explanation

    include ../header-mobile/header-mobile
