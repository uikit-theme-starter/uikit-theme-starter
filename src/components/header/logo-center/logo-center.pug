// Header Logo Center

header.header-default.header-logo-center(uk-sticky media="768" show-on-up animation="uk-animation-slide-top" cls-active="uk-navbar-sticky" sel-target=".uk-navbar-container")

    .uk-container 

        nav(class="uk-navbar-container uk-navbar-transparent uk-navbar" uk-navbar) 

            .uk-navbar-center 

                div(class="uk-navbar-center-left uk-visible@m")
                    div
                        ul.uk-navbar-nav
                            li.uk-acive
                                a(href="#") Nav 1
                            li
                                a(href="#") Nav 2
                            li
                                a(href="#") Nav 3 

                a(class="uk-navbar-item uk-logo" href="/")
                    img(src="/images/icons/icn-tuna-ofis-logo-dark.svg" alt="")

                div(class="uk-navbar-center-right uk-visible@m")
                    div
                        ul.uk-navbar-nav
                            li
                                a(href="#") Nav 1
                            li
                                a(href="#") Nav 2
                            li
                                a(href="#") Nav 3

                div(class="uk-navbar-item uk-hidden@m uk-padding-remove")
                    a(href="#header-mobile-modal" class="uk-navbar-toggle uk-padding-remove" uk-toggle)
                        span(uk-icon="icon: icn-menu-dark;")

    include header-mobile/header-mobile-modal.pug