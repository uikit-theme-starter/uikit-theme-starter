// Slideshow

mixin slideshow-pull(link1, link2, text1, text2)
    section.uk-section.uk-background-bottom-center.uk-background-norepeat.background-primary-gradient.slideshow-pull&attributes(attributes)(class="uk-background-image@l" uk-scrollspy="target: [uk-scrollspy-class]; cls: uk-animation-slide-bottom-medium; delay: 300;")
        .uk-position-relative.uk-margin-auto(class="uk-width-3-4@l" uk-scrollspy-class)
            .uk-position-bottom-left.rotate-button-left.uk-light(class="uk-visible@l")
                a.uk-link-reset.uk-overflow-hidden.uk-display-block(href=link1)
                    span.text(data-hover=text1)=text1
            .uk-position-bottom-right.rotate-button-right.uk-light(class="uk-visible@l")
                a.uk-link-reset.uk-overflow-hidden.uk-display-block(href=link2)
                    span.text(data-hover=text2)=text2
            .uk-slideshow.uk-position-relative(uk-slideshow="animation: pull; max-height: 700; velocity: 0.6")

                ul.uk-slideshow-items(uk-lightbox)
                    block

                .uk-slidenav-container.uk-position-bottom-left
                    a.uk-slidenav.uk-flex.uk-flex-right.uk-flex-middle.uk-background-default.primary(href="#" uk-slideshow-item="previous")
                        span(uk-icon="icon: icn-arrow-left")
                    a.uk-slidenav.uk-flex.uk-flex-middle.uk-background-default.primary(href="#" uk-slideshow-item="next")
                        span(uk-icon="icon: icn-arrow-right")

mixin slideshow-advanced-effects()
    section.uk-section.uk-padding-remove-vertical.slideshow-advanced-effects()
        .uk-slideshow.uk-position-relative.uk-visible-toggle(uk-slideshow="animation: pull; velocity: 0.7; ratio: 1:1.3") 
            ul.uk-slideshow-items.uk-light(uk-height-viewport="offset-top: true;")
                block
            .uk-position-bottom-center
                ul.uk-slideshow-nav.uk-dotnav.uk-flex-middle.uk-margin
            a.uk-position-center-left.uk-position-small.uk-hidden-hover.uk-slidenav.uk-light.uk-border-circle.uk-flex.uk-flex-center.uk-flex-middle.uk-padding-remove(href="#" class="uk-visible@m" uk-slideshow-item="previous" uk-icon="icon: icn-chevron-left; ratio: 1.2;")
            a.uk-position-center-right.uk-position-small.uk-hidden-hover.uk-slidenav.uk-light.uk-border-circle.uk-flex.uk-flex-center.uk-flex-middle.uk-padding-remove(href="#" class="uk-visible@m" uk-slideshow-item="next" uk-icon="icon: icn-chevron-right; ratio: 1.2;")
