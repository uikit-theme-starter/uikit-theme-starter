// Dropdown Animation

button.uk-button.uk-button-default(type="button") Hover
.uk-dropdown(uk-dropdown="animation: uk-animation-slide-top-small; duration: 1000")
    ul.uk-nav.uk-dropdown-nav
        li.uk-active
            a(href="#") Active
        li
            a(href="#") Item
        li.uk-nav-header Header
        li
            a(href="#") Item
        li
            a(href="#") Item
        li.uk-nav-divider
        li
            a(href="#") Item