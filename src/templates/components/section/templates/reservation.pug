// Section Reservation

mixin reservation(title, explanation, button)
	section.uk-section.uk-section-small(uk-scrollspy="target: [uk-scrollspy-class]; cls: uk-animation-slide-bottom-medium; delay: 300;")
		.uk-container
			.uk-grid.uk-grid-medium.uk-flex-bottom(uk-grid uk-scrollspy-class)
				div(class="uk-width-5-6@m")
					h3.uk-margin-small.gradient-text=title
					p.uk-margin-small=explanation
				div(class="uk-width-1-6@m")
					a.uk-button.uk-button-danger(href="#")=button
