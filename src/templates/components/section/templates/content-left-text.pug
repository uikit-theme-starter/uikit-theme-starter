// Section Content Left Text

mixin content-text-left(title)
	section.uk-section.content-text-left(uk-scrollspy="target: [uk-scrollspy-class]; cls: uk-animation-slide-bottom-medium; delay: 300;")
		.uk-container
			.uk-grid.uk-flex-center(uk-grid)
				div(class="uk-width-5-6@m")
					.uk-grid.uk-grid-medium(uk-grid uk-scrollspy-class)
						div(class="uk-width-2-3@m")
							div
								h2.uk-h3.uk-margin-small= title
								span.uk-text-primary(uk-icon="icon: icn-wave;")
								block
						div(class="uk-width-1-3@m uk-visible@m")
							.uk-text-center
								img(data-src="@/images/icons/logo-simple.svg" uk-img alt="" width="95")
